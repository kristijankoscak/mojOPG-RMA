<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/userImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/size150dp"
        android:layout_height="@dimen/size150dp"
        android:layout_margin="@dimen/margin5dp"
        android:foreground="@drawable/icon_rounded_foreground"
        />
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/userImage"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />
    <TextView
        android:id="@+id/userCounty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/userComment"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />
    <TextView
        android:id="@+id/userLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintLeft_toRightOf="@id/userImage"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />
    <TextView
        android:id="@+id/userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userLocation"
        app:layout_constraintLeft_toRightOf="@id/userImage"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />
    <TextView
        android:id="@+id/userOpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userAddress"
        app:layout_constraintLeft_toRightOf="@id/userImage"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />
    <TextView
        android:id="@+id/userProductsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userOpg"
        app:layout_constraintLeft_toRightOf="@id/userImage"
        app:layout_constraintRight_toLeftOf="@id/userProducts"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        android:text="@string/productNumberText"
        />
    <TextView
        android:id="@+id/userProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userOpg"
        app:layout_constraintLeft_toRightOf="@id/userProductsText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />
    <TextView
        android:id="@+id/userGradeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        app:layout_constraintLeft_toRightOf="@id/userCounty"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        android:text="@string/userGradeText"
        />
    <TextView
        android:id="@+id/userGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        app:layout_constraintLeft_toRightOf="@id/userGradeText"
        android:layout_margin="@dimen/margin5dp"
        android:textSize="@dimen/textSize18sp"
        />

    <EditText
        android:id="@+id/userComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userCounty"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/margin5dp"
        />
    <RatingBar
        android:id="@+id/userCommentGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userComment"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/margin5dp"
        android:stepSize="1"
        android:max="5"
        />
    <ImageButton
        android:id="@+id/addCommentButton"
        android:layout_width="@dimen/iconSize40dp"
        android:layout_height="@dimen/iconSize40dp"
        android:background="@color/colorPrimary"
        android:foreground="@drawable/icon_rounded_foreground"
        android:src="@drawable/ic_add_product"
        app:layout_constraintTop_toBottomOf="@id/userComment"
        app:layout_constraintLeft_toRightOf="@id/userCommentGrade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/commentsDisplay"
        android:layout_margin="@dimen/margin5dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsDisplay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0dp"
        app:layout_constraintTop_toBottomOf="@id/userCommentGrade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>