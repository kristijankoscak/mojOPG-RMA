<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/newProductImage"
        android:layout_width="@dimen/productSize"
        android:layout_height="@dimen/productSize"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/margin20dp"
        />

    <EditText
        android:id="@+id/newProductPrice"
        android:textAlignment="center"
        android:layout_width="@dimen/size150dp"
        android:layout_height="wrap_content"
        android:hint="@string/hintPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/newProductImage"
        app:layout_constraintBottom_toTopOf="@id/newProductQuantity"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin20dp"
        />
    <RadioGroup
        android:id="@+id/newProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/newProductPrice"
        app:layout_constraintLeft_toRightOf="@id/newProductImage"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin20dp">
        <RadioButton
            android:id="@+id/quantity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/quantityKNG"
            />
        <RadioButton
            android:id="@+id/quantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/quantityKNKG" />
        <RadioButton
            android:id="@+id/quantity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/quantityKNT" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSelectProductImage"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/newProductQuantity"
        app:layout_constraintLeft_toRightOf="@id/newProductImage"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin20dp"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:text="@string/selectImageButtonText"
        android:background="@color/colorPrimary" />

    <Spinner
        android:id="@+id/newProductType"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonSelectProductImage"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin20dp"
        />
    <EditText
        android:id="@+id/newProductDetailType"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintType"
        app:layout_constraintTop_toBottomOf="@id/newProductType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin20dp"
        />
    <Spinner
        android:id="@+id/newProductCounty"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/newProductDetailType"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin20dp"
        />
    <EditText
        android:id="@+id/newProductLocation"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintPlace"
        app:layout_constraintTop_toBottomOf="@id/newProductCounty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin20dp"
        />
    <EditText
        android:id="@+id/newProductContact"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintPhone"
        app:layout_constraintTop_toBottomOf="@id/newProductLocation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin20dp"
        />
    <ImageButton
        android:id="@+id/buttonAddNewProduct"
        android:layout_width="@dimen/iconSize50dp"
        android:layout_height="@dimen/iconSize50dp"
        app:layout_constraintTop_toBottomOf="@id/newProductContact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin20dp"
        android:layout_marginTop="@dimen/margin5dp"
        android:src="@drawable/ic_add_product"
        android:background="@color/colorPrimary"
        android:foreground="@drawable/icon_rounded_foreground"/>


</androidx.constraintlayout.widget.ConstraintLayout>